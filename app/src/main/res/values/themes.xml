<resources>
    <style name="Theme.Themenschaedel.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/tealDark</item>
    </style>

    <style name="Theme.Themenschaedel" parent="Theme.Themenschaedel.Base"/>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipIconTint">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/primaryColor</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="rippleColor">@color/primaryColor_Alpha26</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="Card" parent="CardView"/>

    <style name="Card.Title">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Card.Subtitle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Wiki_Card" parent="Card">
        <item name="android:background">@drawable/ic_wiki_card</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Wiki_Card.Boys">
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="Wiki_Card.Guests">
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
    </style>

    <style name="Wiki_Card.Ads">
        <item name="android:backgroundTint">@color/teal</item>
    </style>

    <style name="Wiki_Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Cell"/>

    <style name="Cell.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Cell.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Drawer"/>

    <style name="Drawer.Header_1">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Drawer.Header_2">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Profile"/>

    <style name="Profile.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Profile.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Profile.Subtitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="Profile.EditText">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">6dp</item>
    </style>

    <style name="Profile.EditText_Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Dialog"/>

    <style name="Dialog.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Dialog.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Dialog.Details">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItem"/>

    <style name="ListItem.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="ListItem.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Sort"/>

    <style name="Sort.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sort.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/switch_thumb_color</item>
        <item name="android:trackTint">@color/switch_track_color</item>
    </style>

    <style name="Episode"/>

    <style name="Episode.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Episode.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Episode.ListItem_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Login"/>

    <style name="Login.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Login.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Login.Subtitle_Link">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Login.EditText">
        <item name="android:background">@drawable/custom_edit_text_gradient_pill</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="Login.EditText_Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="Register"/>

    <style name="Register.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>
</resources>