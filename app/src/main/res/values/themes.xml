<resources>
    <!-- Base application theme. -->
    <style name="Theme.Themenschaedel.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Themenschaedel" parent="Theme.Themenschaedel.Base"/>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="Card" parent="CardView">

    </style>

    <style name="Card.Title">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Card.Subtitle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Cell"/>

    <style name="Cell.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Cell.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Drawer"/>

    <style name="Drawer.Header_1">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Drawer.Header_2">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>