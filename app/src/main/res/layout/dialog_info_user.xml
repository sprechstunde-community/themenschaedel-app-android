<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_info_user_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_info_user_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_card"
        android:contentDescription="@string/contentDescription_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dialog_info_user_title"
        style="@style/Dialog.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/dialog_info_user_hello"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_info_user_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:text="@string/dialog_info_user_state"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_user_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_user_title" />

    <TextView
        android:id="@+id/dialog_info_user_can"
        style="@style/Dialog.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/dialog_info_rights_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_user_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_user_subtitle" />

    <TextView
        android:id="@+id/dialog_info_user_can_subtitle"
        style="@style/Dialog.Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dialog_info_rights_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_user_subtitle"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_user_can"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_user_can" />


    <TextView
        android:id="@+id/dialog_info_user_can_subtitle2"
        style="@style/Dialog.Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_info_no_rights_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_user_can_subtitle"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_user_can_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_user_can_subtitle" />

    <Button
        android:id="@+id/dialog_info_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/primaryColor"
        android:text="@string/logout"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_user_can_subtitle2"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_user_can_subtitle2"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_user_can_subtitle2" />

</androidx.constraintlayout.widget.ConstraintLayout>