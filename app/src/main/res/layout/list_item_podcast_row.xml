<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="15dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_claimed"
        android:elevation="3dp"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_title"
        app:layout_constraintTop_toTopOf="@+id/row_title" />

    <ImageView
        android:id="@+id/row_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_line"
        android:backgroundTint="@color/surface"
        android:contentDescription="@string/contentDescription_background"
        app:layout_constraintBottom_toBottomOf="@+id/row_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_title"
        style="@style/Cell.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:maxLines="3"
        android:text="@string/podcast_title_dummy"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/row_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_line"
        android:contentDescription="@string/contentDescription_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>