<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_info_profile_roles_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_info_profile_roles_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_card"
        android:contentDescription="@string/contentDescription_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/dialog_info_profile_roles_ano_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_anonym"
        android:contentDescription="@string/contentDescription_icon_suggested"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_info_profile_roles_anonym"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_profile_roles_guideline"
        app:layout_constraintTop_toTopOf="@+id/dialog_info_profile_roles_anonym" />

    <TextView
        android:id="@+id/dialog_info_profile_roles_anonym"
        style="@style/Dialog.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/dialog_info_anonym"
        app:layout_constraintStart_toEndOf="@+id/dialog_info_profile_roles_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_info_profile_roles_ano_details"
        style="@style/Dialog.Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/dialog_info_anonym_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_profile_roles_anonym"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_profile_roles_anonym" />

    <ImageView
        android:id="@+id/dialog_info_profile_roles_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_user"
        android:contentDescription="@string/contentDescription_icon_suggested"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_info_profile_roles_user"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_profile_roles_guideline"
        app:layout_constraintTop_toTopOf="@+id/dialog_info_profile_roles_user" />

    <TextView
        android:id="@+id/dialog_info_profile_roles_user"
        style="@style/Dialog.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/profile_role_user"
        app:layout_constraintStart_toEndOf="@+id/dialog_info_profile_roles_icon"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_profile_roles_ano_details" />

    <TextView
        android:id="@+id/dialog_info_profile_roles_details"
        style="@style/Dialog.Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/dialog_info_user_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_profile_roles_ano_details"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_profile_roles_user"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_profile_roles_user" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_info_profile_roles_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>