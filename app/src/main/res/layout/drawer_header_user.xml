<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface">

    <androidx.cardview.widget.CardView
        android:id="@+id/drawer_image_mask_user"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:elevation="12dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/drawer_image_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:contentDescription="@string/contentDescription_profile_image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/drawer_name_user"
        style="@style/Drawer.Header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/profile_name_dummy"
        app:layout_constraintStart_toStartOf="@+id/drawer_image_mask_user"
        app:layout_constraintTop_toBottomOf="@+id/drawer_image_mask_user" />

    <TextView
        android:id="@+id/drawer_email_user"
        style="@style/Drawer.Header_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/profile_email_dummy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/drawer_name_user"
        app:layout_constraintTop_toBottomOf="@+id/drawer_name_user" />
</androidx.constraintlayout.widget.ConstraintLayout>