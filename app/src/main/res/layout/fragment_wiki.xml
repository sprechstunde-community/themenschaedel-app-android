<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.wiki.WikiFragment">

    <ImageButton
        android:id="@+id/fragment_wiki_boys"
        style="@style/Wiki_Card.Boys"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/contentDescription_card_button"
        app:layout_constraintDimensionRatio="h,2:0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fragment_wiki_guests"
        style="@style/Wiki_Card.Guests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/contentDescription_card_button"
        app:layout_constraintDimensionRatio="h,2:0.7"
        app:layout_constraintEnd_toEndOf="@+id/fragment_wiki_boys"
        app:layout_constraintStart_toStartOf="@+id/fragment_wiki_boys"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wiki_boys" />

    <ImageButton
        android:id="@+id/fragment_wiki_ads"
        style="@style/Wiki_Card.Ads"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/contentDescription_card_button"
        app:layout_constraintDimensionRatio="h,2:0.7"
        app:layout_constraintEnd_toEndOf="@+id/fragment_wiki_boys"
        app:layout_constraintStart_toStartOf="@+id/fragment_wiki_guests"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wiki_guests" />
</androidx.constraintlayout.widget.ConstraintLayout>