<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_topic_verify_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_topic_verify_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/list_item_topic_verify_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/list_item_topic_verify_checkbox"
        app:layout_constraintTop_toTopOf="@+id/list_item_topic_verify_checkbox" />

    <ImageView
        android:id="@+id/list_item_topic_verify_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_empty" />

    <TextView
        android:id="@+id/list_item_topic_verify_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/list_item_topic_verify_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/list_item_topic_verify_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_topic_verify_time"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/list_item_topic_verify_time"
        app:layout_constraintTop_toTopOf="@+id/list_item_topic_verify_time"
        app:srcCompat="@drawable/ic_ad" />

</androidx.constraintlayout.widget.ConstraintLayout>