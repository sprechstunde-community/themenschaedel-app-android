<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/podcastCardFragment">

    <fragment
        android:id="@+id/podcastCellFragment"
        android:name="sprechstunde.community.themenschaedel.view.PodcastCellFragment"
        tools:layout="@layout/fragment_podcast_cell">
        <action
            android:id="@+id/action_cell_to_row"
            app:destination="@id/podcastRowFragment"
            app:popUpTo="@id/podcastCellFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/podcastRowFragment"
        android:name="sprechstunde.community.themenschaedel.view.PodcastRowFragment"
        tools:layout="@layout/fragment_podcast_row">
        <action
            android:id="@+id/action_row_to_card"
            app:destination="@id/podcastCardFragment"
            app:popUpTo="@id/podcastRowFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/podcastCardFragment"
        android:name="sprechstunde.community.themenschaedel.view.PodcastCardFragment"
        tools:layout="@layout/fragment_podcast_card">
        <action
            android:id="@+id/action_card_to_cell"
            app:destination="@id/podcastCellFragment"
            app:popUpTo="@id/podcastCardFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="sprechstunde.community.themenschaedel.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>