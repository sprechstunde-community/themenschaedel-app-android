<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/list_item_sugg_details_arrow" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/list_item_sugg_details_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            motion:layout_constraintBottom_toTopOf="@+id/list_item_sugg_details_divider"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@+id/list_item_sugg_details_title"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/list_item_sugg_details_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="@+id/list_item_sugg_topic_number"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/list_item_sugg_topic_number">
            <PropertySet android:visibility="visible" motion:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/list_item_sugg_details_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            motion:layout_constraintBottom_toTopOf="@+id/list_item_sugg_details_divider"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/list_item_sugg_details_title"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/list_item_sugg_details_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="@+id/list_item_sugg_topic_number"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/list_item_sugg_topic_number"
            android:rotation="-90"
            android:translationX="4dp"
            android:translationY="4dp" />
    </ConstraintSet>
</MotionScene>