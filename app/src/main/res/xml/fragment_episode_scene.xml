<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/motionlayout_episode"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_state"
               app:framePosition="60"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_host"
               app:framePosition="60"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_edited"
               app:framePosition="50"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_hosts"
               app:framePosition="50"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_state_text"
               app:framePosition="5"
               android:alpha="0" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="1.14" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.12"
               app:percentY="0.65" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.12"
               app:percentY="0.65" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.1"
               app:percentY="0.6" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="0.45" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_filter"
               app:framePosition="60"
               app:keyPositionType="pathRelative"
               app:percentX="0.72"
               app:percentY="0" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.15"
               app:percentY="1.04" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.15"
               app:percentY="1.04" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="0.45" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.33"
               app:percentY="-0.1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.1"
               app:percentY="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_filter"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.35"
               app:percentY="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="70"
               android:alpha="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.15"
               app:percentY="1.04" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_title"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.12"
               app:percentY="0.65" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.08"
               app:percentY="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.15"
               app:percentY="1.04" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="45"
               app:keyPositionType="pathRelative"
               app:percentX="1.12"
               app:percentY="0.65" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="22"
               app:keyPositionType="pathRelative"
               app:percentX="1.1"
               app:percentY="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="28"
               app:keyPositionType="pathRelative"
               app:percentX="1.1"
               app:percentY="0.6" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_number"
               app:framePosition="70"
               android:alpha="1" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="70"
               android:alpha="1" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_length"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_date"
               app:framePosition="70"
               android:alpha="1" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle_2"
               app:framePosition="70"
               android:alpha="1" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               app:motionTarget="@+id/fragment_episode_circle"
               app:framePosition="70"
               android:alpha="1" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_filter_background"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.35"
               app:percentY="0" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_filter_background"
               app:framePosition="60"
               app:keyPositionType="pathRelative"
               app:percentX="0.72"
               app:percentY="0" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_recyclerview"
               app:framePosition="15"
               app:keyPositionType="pathRelative"
               app:percentX="0.55"
               app:percentY="0" />
           <KeyPosition
               app:motionTarget="@+id/fragment_episode_recyclerview"
               app:framePosition="60"
               app:keyPositionType="pathRelative"
               app:percentX="0.85"
               app:percentY="0" />
       </KeyFrameSet>
        <OnSwipe app:touchAnchorId="@+id/fragment_episode_recyclerview" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/fragment_episode_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_image_container"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_image_container"
            android:layout_marginTop="16dp">
            <CustomAttribute
                app:attributeName="maxLines"
                app:customIntegerValue="7" />
        </Constraint>

        <Constraint android:id="@+id/fragment_episode_no_topics_background"> <PropertySet android:visibility="visible" app:visibilityMode="ignore" /> </Constraint>
        <Constraint android:id="@+id/fragment_episode_no_topics"> <PropertySet android:visibility="visible" app:visibilityMode="ignore" /> </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"
            android:layout_width="wrap_content"
            android:id="@+id/fragment_episode_guideline" />
        <Constraint
            android:id="@+id/fragment_episode_state"
            app:layout_constraintEnd_toEndOf="@+id/fragment_episode_state_text"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/fragment_episode_image_container"
            app:layout_constraintDimensionRatio="h,4:1"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_state_text" />
        <Constraint
            android:id="@+id/fragment_episode_state_text"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_episode_state"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/fragment_episode_state"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/fragment_episode_host"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_episode_image_container"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_edited"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_edited"
            app:layout_constraintDimensionRatio="h,1:1"
            android:layout_marginTop="2dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/fragment_episode_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_gridview"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline"
            android:visibility="invisible" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_state"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_state"
            android:layout_marginTop="0dp"
            android:id="@+id/fragment_episode_hosts"
            android:visibility="invisible" />
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/fragment_episode_title"
            app:layout_constraintStart_toEndOf="@+id/fragment_episode_image_container"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/fragment_episode_image_container"
            app:layout_constraintBottom_toTopOf="@+id/fragment_episode_date"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="1.0">
            <CustomAttribute
                app:attributeName="maxLines"
                app:customIntegerValue="2" />
        </Constraint>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_image_container"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_image_container"
            android:id="@+id/fragment_episode_filter"
            android:layout_marginTop="8dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_title"
            android:id="@+id/fragment_episode_number"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_episode_image_container"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_title"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/fragment_episode_gridview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_episode_hosts"
            app:layout_constraintStart_toStartOf="@+id/fragment_episode_hosts"
            android:layout_marginTop="2dp"
            android:visibility="invisible" />
    </ConstraintSet>
</MotionScene>