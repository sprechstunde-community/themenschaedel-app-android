<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/motionlayout_episode"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@id/fragment_episode_title"
               motion:framePosition="30"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@id/fragment_episode_title"
               motion:framePosition="90"
               android:alpha="100" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="51"
               android:translationX="120dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="30"
               android:translationY="-20dp" />
           <KeyAttribute
               motion:motionTarget="@id/fragment_episode_title"
               motion:framePosition="60"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_image_container"
               motion:framePosition="0"
               android:translationX="0dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="20"
               android:translationX="-25dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="40"
               android:translationX="-50dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="45"
               android:translationX="-56dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="60"
               android:translationX="100dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_title"
               motion:framePosition="56"
               android:translationY="-100dp" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state_text"
               motion:framePosition="0"
               android:alpha="100" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state_text"
               motion:framePosition="3"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state"
               motion:framePosition="15"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state"
               motion:framePosition="90"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state"
               motion:framePosition="31"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@id/fragment_episode_title"
               motion:framePosition="100"
               android:alpha="100" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_edited"
               motion:framePosition="10"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_edited"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_editer"
               motion:framePosition="10"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_editer"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_state_text"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_hosts"
               motion:framePosition="10"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_hosts"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_gridview"
               motion:framePosition="10"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fragment_episode_gridview"
               motion:framePosition="100"
               android:alpha="0" />
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/fragment_episode_recyclerview" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/fragment_episode_title"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline2"
            android:layout_marginTop="16dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_image_container"
            motion:layout_constraintHorizontal_bias="1.0" >
            <CustomAttribute
                motion:attributeName="maxLines"
                motion:customIntegerValue="7" />
        </Constraint>
        <Constraint
            android:id="@+id/fragment_episode_image_container"
            motion:layout_constraintEnd_toStartOf="@+id/fragment_episode_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintDimensionRatio="h,1:1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/fragment_episode_state"
            motion:layout_constraintEnd_toEndOf="@+id/fragment_episode_state_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_image_container"
            motion:layout_constraintDimensionRatio="h,4:1"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_state_text" />
        <Constraint
            android:id="@+id/fragment_episode_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_episode_state"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_state"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline" />
        <Constraint
            android:id="@+id/fragment_episode_hosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_state"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_state"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/fragment_episode_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_number"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_number"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/fragment_episode_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_gridview"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline" />
        <Constraint
            android:id="@+id/fragment_episode_editer"
            android:layout_width="30dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_episode_image_container"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_edited"
            android:layout_marginStart="8dp"
            motion:layout_constraintDimensionRatio="h,1:1"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_edited"
            android:layout_marginTop="2dp" />
        <Constraint
            android:id="@+id/fragment_episode_gridview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_hosts"
            android:layout_marginTop="2dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_hosts" />
        <Constraint
            android:id="@+id/fragment_episode_no_topics"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_no_topics_background"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/fragment_episode_no_topics_background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/fragment_episode_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/fragment_episode_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/fragment_episode_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/fragment_episode_recyclerview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fragment_episode_guideline"
            motion:layout_constraintGuide_percent="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Constraint
            android:id="@+id/fragment_episode_image_container"
            motion:layout_constraintEnd_toStartOf="@+id/fragment_episode_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintDimensionRatio="h,1:1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/fragment_episode_title"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_image_container"
            motion:layout_constraintStart_toEndOf="@+id/fragment_episode_image_container"
            android:layout_marginStart="16dp"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_episode_image_container">
            <CustomAttribute
                motion:attributeName="maxLines"
                motion:customIntegerValue="3" />
        </Constraint>
        <Constraint
            android:id="@+id/fragment_episode_state"
            motion:layout_constraintEnd_toEndOf="@+id/fragment_episode_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_image_container"
            motion:layout_constraintDimensionRatio="h,1:1" />
        <Constraint
            android:id="@+id/fragment_episode_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_episode_state"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_state"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline"
            android:visibility="invisible" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_title"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_image_container"
            android:layout_marginTop="8dp"
            android:id="@+id/fragment_episode_number" />
        <Constraint
            android:id="@+id/fragment_episode_hosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_number"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_number"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/fragment_episode_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_number"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_number"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/fragment_episode_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_gridview"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_guideline"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/fragment_episode_editer"
            android:layout_width="30dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/fragment_episode_image_container"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_edited"
            android:layout_marginStart="8dp"
            motion:layout_constraintDimensionRatio="h,1:1"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_edited"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/fragment_episode_gridview"
            motion:layout_constraintEnd_toEndOf="@+id/fragment_episode_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/fragment_episode_hosts"
            android:layout_marginTop="2dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_hosts"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/fragment_episode_no_topics"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="@+id/fragment_episode_no_topics_background"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/fragment_episode_no_topics_background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment_episode_filter"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>